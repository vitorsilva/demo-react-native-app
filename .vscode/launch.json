{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Android",
      "cwd": "${workspaceFolder}/DemoApp",
      "type": "reactnative",
      "request": "launch",
      "platform": "android"
    },
    {
      "name": "Debug iOS",
      "cwd": "${workspaceFolder}/DemoApp",
      "type": "reactnative",
      "request": "launch",
      "platform": "ios"
    },
    {
      "name": "Attach to packager",
      "cwd": "${workspaceFolder}/DemoApp",
      "type": "reactnative",
      "request": "attach"
    },
    {
      "name": "Run Android on Device",
      "cwd": "${workspaceFolder}/DemoApp",
      "type": "reactnative",
      "request": "launch",
      "platform": "android",
      "target": "device"
    },
    {
      "name": "Run iOS on Device",
      "cwd": "${workspaceFolder}/DemoApp",
      "type": "reactnative",
      "request": "launch",
      "platform": "ios",
      "target": "device"
    }
  ]
}
